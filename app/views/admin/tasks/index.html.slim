.row-fluid
	= form_tag(search_admin_tasks_path, method: :get, class: "form-search")
    = text_field_tag :search, "", placeholder: t(".search"), id: "appendedInputButton"
br
.row-fluid
	table.table.table-striped.table-bordered
		thead
			tr
				th style="width: 10%;" #
				th style="width: 40%;" #{t(".name")}
				th style="width: 50%;" #{t(".action")}
		tbody
			- @tasks.each do |task|
				tr
					td = task.id
					td = task.name
					td
						= link_to t(".history"), admin_results_path(by_task_id: task.id)
						|  \ 
						= link_to t(".review"), admin_task_path(task)
						|  \ 
						= link_to t(".edit"), edit_admin_task_path(task)
						|  \  
						= link_to t(".del"), admin_task_path(task), method: :delete, data: {confirm: t(".ask")}
.row-fluid
	= link_to t(".added"), new_admin_task_path, class: 'button'
	|&nbsp
	= link_to t(".back"), admin_root_path, class: 'button'
